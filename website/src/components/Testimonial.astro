---
import { faQuoteRight } from "@fortawesome/free-solid-svg-icons";
import FontAwesomeIcon from "./FontAwesomeIcon.astro";
---

<div
  class="bg-secondary/30 backdrop-blur-sm border border-muted/30 p-6 rounded-lg card-hover relative"
>
  <FontAwesomeIcon
    icon={faQuoteRight}
    class="absolute text-primary/10 !h-24 w-24 -top-4 -left-1 rotate-180"
  />
  <div class="flex flex-col h-full">
    <p class="text-base mb-6 flex-grow">
      {Astro.props.testimonial}
    </p><div class="border-t border-muted/30 pt-4">
      <div class="flex flex-row">
        <div class="flex-grow">
          <p class="font-medium">{Astro.props.name}</p>{
            Astro.props.description ? (
              <p class="text-sm text-muted-foreground">
                {Astro.props.description}
              </p>
            ) : (
              ""
            )
          }
        </div>
        <div>
          <a href={Astro.props.sourceLink} target="_blank" aria-label="Source">
            <FontAwesomeIcon
              icon={Astro.props.sourceIcon}
              class="w-6 !h-6 self-center"
            />
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
