---
import {
  faBolt,
  faCog,
  faGlobe,
  faLock,
  faServer,
  faShieldHalved
} from "@fortawesome/free-solid-svg-icons";
import Benefit from "./Benefit.astro";
import Section from "./Section.astro";
---

<Section
  id="features"
  title="Why choose Ferron?"
  description="Designed with modern web hosting needs in mind, Ferron combines speed, security, and ease of use in one powerful package."
>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <Benefit
      icon={faBolt}
      title="Fast"
      description="Thoroughly optimized for speed with support for high concurrency."
    />
    <Benefit
      icon={faShieldHalved}
      title="Memory-safe"
      description="Built with memory safety as a priority, eliminating common security vulnerabilities."
    />
    <Benefit
      icon={faLock}
      title="Automatic TLS"
      description="Automatic SSL/TLS certificate acquisition and renewal with Let's Encrypt integration."
    />
    <Benefit
      icon={faCog}
      title="Easy configuration"
      description="Simple, intuitive configuration with sensible, secure defaults and comprehensive documentation."
    />
    <Benefit
      icon={faServer}
      title="Powerful reverse proxy"
      description="Advanced reverse proxy capabilities with support for load balancing and health checks."
    />
    <Benefit
      icon={faGlobe}
      title="API-friendly"
      description="Built-in support for modern API patterns including WebSockets."
    />
  </div>
</Section>
