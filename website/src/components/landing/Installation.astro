---
import FontAwesomeIcon from "../FontAwesomeIcon.astro";
import InstallCommand from "./InstallCommand.astro";
import {
  faBox,
  faGaugeHigh,
  faServer
} from "@fortawesome/free-solid-svg-icons";
---

<section id="install" class="py-20 bg-secondary/20">
  <div class="container">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Quick installation</h2>
      <p class="text-muted-foreground text-lg max-w-2xl mx-auto">
        Get started with Ferron in minutes. Choose your preferred platform and
        installation method.
      </p>
    </div>
    <div class="max-w-3xl mx-auto">
      <InstallCommand />
      <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-secondary/30 p-6 rounded-lg border border-muted/30 shadow-sm">
          <FontAwesomeIcon
            icon={faServer}
            class="!h-10 w-10 text-primary mb-4"
          />
          <h3 class="text-lg font-semibold mb-2">Manual download</h3>
          <p class="text-muted-foreground mb-4">
            Download the binary directly from our releases page.
          </p>
          <a
            href="/download"
            class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-8 px-3 w-full"
          >
            Download releases
          </a>
        </div>
        <div class="bg-secondary/30 p-6 rounded-lg border border-muted/30 shadow-sm">
          <FontAwesomeIcon
            icon={faGaugeHigh}
            class="!h-10 w-10 text-primary mb-4"
          />
          <h3 class="text-lg font-semibold mb-2">Build from source</h3>
          <p class="text-muted-foreground mb-4">
            Compile Ferron from source for maximum customization.
          </p>
          <a
            href="https://github.com/ferronweb/ferron?tab=readme-ov-file#building-ferron-from-source"
            class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-8 px-3 w-full"
          >
            Build instructions
          </a>
        </div>
        <div class="bg-secondary/30 p-6 rounded-lg border border-muted/30 shadow-sm">
          <FontAwesomeIcon icon={faBox} class="!h-10 w-10 text-primary mb-4" />
          <h3 class="text-lg font-semibold mb-2">Package managers</h3>
          <p class="text-muted-foreground mb-4">
            Install via popular package managers on any platform.
          </p>
          <a
            href="/docs/installation/package-managers"
            class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring disabled:pointer-events-none disabled:opacity-50 border border-input bg-background shadow-sm hover:bg-accent hover:text-accent-foreground h-8 px-3 w-full"
          >
            View instructions
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
