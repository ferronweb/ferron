---
import "../styles/global.css";
import { SEO } from "astro-seo";
import { Font } from "astro:assets";
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <Font cssVariable="--font-ibm-plex-sans" />
    <Font cssVariable="--font-ibm-plex-mono" />
    <SEO
      title={Astro.props.title
        ? `${Astro.props.title} - Ferron`
        : "Ferron - a fast, modern web server"}
      description={Astro.props.description}
      openGraph={{
        basic: {
          title: Astro.props.title
            ? `${Astro.props.title} - Ferron`
            : "Ferron - a fast, modern web server",
          type: "website",
          image: `${Astro.url.origin}${Astro.props.image || "/opengraph.png"}`
        },
        optional: {
          description: Astro.props.description
        }
      }}
      twitter={{
        card: "summary_large_image",
        site: "@ferron_web",
        title: Astro.props.title
          ? `${Astro.props.title} - Ferron`
          : "Ferron - a fast, modern web server",
        image: `${Astro.url.origin}${Astro.props.image || "/opengraph.png"}`,
        description: Astro.props.description
      }}
    />
    <ClientRouter />
  </head>
  <body class="flex flex-col min-h-screen">
    <slot />
  </body>
</html>

<script>
  import Plausible from "plausible-tracker";

  const plausible = Plausible({
    domain: "ferronweb.org",
    apiHost: "https://analytics.ferronweb.org"
  });

  plausible.trackPageview();
  plausible.enableAutoOutboundTracking();

  document.addEventListener("astro:after-swap", () => {
    // Track page view
    plausible.trackPageview();
  });
</script>
